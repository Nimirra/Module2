<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Salmon</item>
        <item name="colorPrimaryDark">@color/Maroon</item>
        <item name="colorAccent">@color/Maroon</item>
    </style>

    <style name="MyToolBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/Salmon</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="myButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:elevation">8dp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">@string/nextButton</item>
    </style>

    <style name="buttonMail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/Salmon</item>
    </style>
</resources>
